<h1>Listing patients</h1>

<%= form_tag(patients_path, :method => :get) do %>
  <div id="search">
    <%= text_field_tag 'search', params[:search], :id => 'search' %>
    <%= submit_tag 'Search'%>
    <%= link_to "Reset Search", patients_path unless params[:search].blank? %>
  </div>
<% end %>
<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Age</th>
    <th>Sex</th>
    <th>Treatment</th>
    <th>Source</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @patients.each do |patient| %>
  <tr>
    <td><%= link_to patient.name, patient %></td>
    <td><%= patient.address %></td>
    <td><%= patient.age %></td>
    <td><%= patient.sex %></td>
    <td><%= patient.treatment %></td>
    <td><%= patient.source %></td>
    <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
    <td><%= link_to 'Destroy', patient, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Patient', new_patient_path %>
